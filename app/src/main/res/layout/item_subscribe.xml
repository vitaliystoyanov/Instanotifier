<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/subscriber_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="username"
        android:id="@+id/subscriber_username"
        android:layout_alignBaseline="@+id/subscriber_followers_user"
        android:layout_alignBottom="@+id/subscriber_followers_user"
        android:layout_toRightOf="@+id/subscriber_profile_image"
        android:layout_toEndOf="@+id/subscriber_profile_image"
        android:textColor="@color/md_black_1000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="followers"
        android:id="@+id/follow_followers_user"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/subscriber_username"
        android:layout_toEndOf="@+id/subscriber_follows_user"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="follows"
        android:id="@+id/follow_follows_user"
        android:layout_below="@+id/subscriber_username"
        android:layout_alignRight="@+id/subscriber_username"
        android:layout_alignEnd="@+id/subscriber_username" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOLLOW"
        android:id="@+id/follow_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>